{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "moduleResolution": "node",
    "rootDirs": ["src", "deps/susa/src"],
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "Susa/*": ["deps/susa/src/*"],
      "Nanoshooter/*": ["src/*"]
    },
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "deps/susa/node_modules",
    "deps/susa/build",
    "deps/susa/deps"
  ]
}