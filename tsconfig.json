{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "Susa/*": ["node_modules/susa/build/*"],
      "Nanoshooter/*": ["src/*"]
    },
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ]
}